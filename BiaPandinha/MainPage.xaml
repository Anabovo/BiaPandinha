<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiaPandinha.MainPage">

  <Grid>
  <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
  </Grid.RowDefinitions>
   
  <Grid.ColumnDefinitions>
            <ColumnDefinitions Width="90"/>
            <ColumnDefinitions Width="*"/>
  </Grid.ColumnDefinitions>

  <Image Source="InicioFlor.png"
         Aspect="AspectFill"
         Grid.Row="1"
         Grid.Column="0"
         Grid.ColumnSpan="2"/>
  
  <Image x:Name="InicioFlor."/>
   
  <Label Text="Feed your pet"
         TextColor="#FF69B4"
         Margin="20,30,20,50"
         FontSize="75"
         FontFamily="Candy Beans"
         Grid.Row=""/>

       
</Grid>      
</ContentPage>
