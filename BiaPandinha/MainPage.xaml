<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiaPandinha.MainPage">

  <Grid>

       <Image Source="fundo.png"
              Aspect="AspectFill"/>

       <Image x:Name="fundo"
              Source="girafa.png"
              Aspect="AspectFill"
              Margin="60, 0, 10, 0"
              VerticalOptions="End"/>

       <Frame VerticalOptions="Start"
              Margin="10, 20"
              BackgroundColor="#9ACD32"
              HeightRequest="200"
              CornerRadius="30">

          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          
       <ImageButton x:Name ="seta"
                    Source="seta.pnj"
                    Grid.Row="0"/>

       <ImageButton x:Name ="carne"
                    Source="carne.pnj"
                    Grid.Row="1"/>
       
       <ImageButton x:Name ="agua"
                    Source="agua.pnj"
                    Grid.Row="2"/>

       <ImageButton x:Name ="brinquedo"
                    Source="brinquedo.pnj"
                    Grid.Row="3"/>
       


       
             

</Frame>
</Grid> 
</ContentPage>
